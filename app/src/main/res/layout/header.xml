 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     tools:context="com.fract.nano.williamyoung.popularmovies.DetailFragment">

     <TextView
         android:id="@+id/detail_original_title"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textSize="30sp"
         android:textColor="@color/white"
         android:background="@color/coastblue"
         android:paddingLeft="24dp"
         android:paddingTop="30dp"
         android:paddingBottom="25dp"/>
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="180dp"
         android:paddingTop="10dp"
         android:paddingLeft="24dp"
         android:orientation="horizontal">
         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/detail_poster"
             android:contentDescription="@string/poster"/>
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:paddingLeft="40dp">
             <TextView
                 android:id="@+id/detail_release_date"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:fontFamily="sans-serif-light"
                 android:textSize="25sp"
                 android:textColor="@color/grey"/>
             <TextView
                 android:id="@+id/detail_runtime"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingBottom="5dp"
                 android:textStyle="bold|italic"
                 android:textSize="23sp"
                 android:textColor="@color/grey"/>
             <TextView
                 android:id="@+id/detail_user_rating"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingBottom="10dp"
                 android:textSize="17sp"
                 android:textColor="@color/black"/>
             <Button
                 android:id="@+id/detail_fav_btn"
                 android:layout_width="90dp"
                 android:layout_height="40dp"
                 android:text="@string/fav_button"
                 android:singleLine="false"
                 android:background="@drawable/favorite"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/detail_synopsis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:paddingTop="20dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="5dp"/>
     <View
         android:layout_width="wrap_content"
         android:layout_height="1dp"
         android:layout_marginLeft="16dp"
         android:layout_marginRight="16dp"
         android:background="@color/black"/>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="23sp"
         android:text="@string/trailers"
         android:paddingTop="5dp"
         android:paddingLeft="16dp"/>
 </LinearLayout>